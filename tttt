function Get-PolicyID {
    # Add a param block to specify the input parameter
    param (
        [string]$xmlFile
    )

    # Load the XML file into a variable
    $xml = new-object System.Xml.XmlDocument 
    $file = resolve-path($xmlFile)
    $xml.load($file)

    # Get the <policy> nodes from the XML file
    $policies = $xml.SelectNodes("//Policy")

    # Create an empty list to store the ID values
    $policyIDs = @()

    # Loop through each <policy> node and get the ID attribute value
    foreach ($policy in $policies) {
        $policyID = $policy.GetAttribute("ID")
        # Add the ID value to the list
        $policyIDs += $policyID
    }

    # Output the list of ID values using Write-Output
    Write-Output $policyIDs

}
